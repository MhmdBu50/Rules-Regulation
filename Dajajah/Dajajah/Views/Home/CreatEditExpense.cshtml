@{
    ViewData["Title"] = "Create Expense";
}

@model Dajajah.Models.Expense;

<div class="text-center">
    <h1 class="display-4">Create or edit Expense</h1>
</div>

<form asp-action="CreatEditExpenseForm" asp-controller="Home">
    <label>ID</label>
    <input class="form-control" type="number" placeholder="0,1,2,3..." asp-for="Id" />
    <br />

    <label>Value $</label>
    <input class="form-control" type="number" step="0.1" placeholder="0.0" asp-for="Value" />
    <br />

    <label>Description</label>
    <input class="form-control" type="text" placeholder="Add Description" asp-for="Description" />

    <button class="btn btn-dark mt-4" type="submit">Ok</button>
</form>