@{
    ViewData["Title"] = "Admin Portal";
}
@using Microsoft.AspNetCore.Localization

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture.Culture.Name ?? "en-US";
    var isArabic = currentCulture == "ar-SA";
    ViewBag.IsArabic = isArabic;
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-portal.css">
    <link rel="stylesheet" href="~/css/_rtl_Styles.css">
    <link rel="stylesheet" href="~/css/adminPagesHeader.css">
    <link rel="stylesheet" href="~/css/adminMobileMenu.css">
}

@section Scripts {
    <script src="~/js/admin-portal.js"></script>
    <script src="~/js/languageSwitcher.js"></script>
    <script src="~/js/adminPagesHeader.js"></script>
    <script src="~/js/adminMobileMenu.js"></script>
}

<!-- Admin Header with Language and Logout buttons -->
<header class="menu" style="background: none;">
    <div class="container-fluid h-100 bootstrap-wrapper">
        <div class="row align-items-center h-100 g-0">
            <div class="col-auto">
                <div class="d-flex align-items-center justify-content-around ms-3 gap-3 me-3 ">

                    <!------------------- Logout Button ------------------->
                    <div>
                        <form method="post" action="@Url.Action("Logout", "Account")" style="margin: 0">
                            @Html.AntiForgeryToken()
                            <button class="desktop-logo d-flex logo header-nav" type="submit" style="">
                                <img src="~/svgs/navigation/logout.svg" alt="Menu" width="36px" height="36px" />
                                <span class="poppins-regular" id="Logout345"></span>
                            </button>
                        </form>
                    </div>

                    <!-------- Vertical Divider -------->
                    <div class="vr" style="color: aliceblue; opacity: 0.75;"></div>
                    <!-------- Vertical Divider -------->

                    <!-------------------- Language Switcher ------------------->
                    <div class="language-switcher-container">
                        <button id="language-toggle" class="language-toggle-btn desktop-logo logo header-nav">
                            <img src="~/svgs/navigation/language.svg" alt="Language" width="36px" height="36px" />
                            <span class="poppins-regular" id="Language345">English</span>
                        </button>
                    </div>
                </div>
            </div>

            <div class="col d-flex flex-nowrap align-items-center justify-content-center">
                <!-- Search section removed as requested -->
            </div>

            <div class="col-auto flex-nowrap  ms-3 me-3">
                <!-- Back button removed as requested -->
            </div>

        </div>
    </div>
</header>



<div class="admin-portal-bg">
    <div class="portal-container">
        <div class="hero">
            <!-- Admin Portal -->
            <h1 id="admin-portal-title"></h1>
            <!-- Quick access to main administrative tools -->
            <p id="admin-portal-subtitle"></p>
        </div>

        <div class="row">
            <a class="col portal-card" href="/Home/homePage">
                <div class="card-icon">
                    <img src="~/svgs/nav-buttons/Normal-homeButton.svg" alt="Admin" width="36" height="36" />
                </div>
                <!-- Home Page -->
                <div class="card-title" id="admin-portal-home-title"></div>
                <!-- Overview and quick links -->
                <div class="card-desc" id="admin-portal-home-desc"></div>
            </a>
<!--------------------- Editor Page --------------------->
            <a class=" col portal-card" href="/Admin/AdminPage">
                <div class="card-icon">
                    <img src="~/svgs/nav-buttons/Normal-AdminView.svg" alt="Admin" width="36" height="36" />
                </div>
                <!-- Editor Page -->
                <div class="card-title" id="admin-portal-editor-title"></div>
                <!-- Manage records and content -->
                <div class="card-desc" id="admin-portal-editor-desc"></div>
            </a>
<!--------------------- Activity Log --------------------->
            <a class="col portal-card" href="/Admin/ActivityLog">
                <div class="card-icon">
                    <img src="~/svgs/nav-buttons/Normal-historyButton.svg" alt="Admin" width="36" height="36" />
                </div>
                <!-- Activity Log -->
                <div class="card-title" id="admin-portal-activity-title"></div>
                <!-- Review all admin/editor changes -->
                <div class="card-desc" id="admin-portal-activity-desc"></div>

            </a>

            <a class="col portal-card" href="/Admin/AssignNewEditor">
                <div class="card-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" width="36" height="36" x="0" y="0" viewBox="0 0 24 24" style="enable-background:new 0 0 512 512" xml:space="preserve" class="btn-outline-light">
                        <g>
                            <path d="M23 11h-2V9a1 1 0 0 0-2 0v2h-2a1 1 0 0 0 0 2h2v2a1 1 0 0 0 2 0v-2h2a1 1 0 0 0 0-2ZM9 12a6 6 0 1 0-6-6 6.006 6.006 0 0 0 6 6ZM9 2a4 4 0 1 1-4 4 4 4 0 0 1 4-4ZM9 14a9.01 9.01 0 0 0-9 9 1 1 0 0 0 2 0 7 7 0 0 1 14 0 1 1 0 0 0 2 0 9.01 9.01 0 0 0-9-9Z" fill="currentColor" opacity="1" data-original="#000000" class=""></path>
                        </g>
                    </svg>
                </div>
                <!-- Assign New Editor -->
                <div class="card-title" id="admin-portal-assign-title"></div>
                <!-- Grant editor access -->
                <div class="card-desc" id="admin-portal-assign-desc"></div>
            </a>
        </div>
    </div>
</div>
