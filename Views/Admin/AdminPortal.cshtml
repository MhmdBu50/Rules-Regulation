                </div>
                <!-- Editor Page -->
                <div class="card-title" id="admin-portal-editor-title"></div>
                <!-- Manage records and content -->
                <div class="card-desc" id="admin-portal-editor-desc"></div>
                <!-- Open → -->
                <div class="card-cta" id="admin-portal-editor-cta"></div>
            </a>

            <a class="portal-card" href="/Admin/ActivityLog">
                <div class="card-icon">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M13.5,8H12V13L16.28,15.54L17,14.33L13.5,12.25V8M13,3A9,9 0 0,0 4,12H1L4.96,16.03L9,12H6A7,7 0 0,1 13,5A7,7 0 0,1 20,12A7,7 0 0,1 13,19C11.07,19 9.32,18.21 8.06,16.94L6.64,18.36C8.27,20 10.5,21 13,21A9,9 0 0,0 22,12A9,9 0 0,0 13,3"/>
                    </svg>
                </div>
                <!-- Activity Log -->
                <div class="card-title" id="admin-portal-activity-title"></div>
                <!-- Review all admin/editor changes -->
                <div class="card-desc" id="admin-portal-activity-desc"></div>
                <!-- Open → -->
                <div class="card-cta" id="admin-portal-activity-cta"></div>
            </a>

            <a class="portal-card" href="/Admin/AssignNewEditor">
                <div class="card-icon">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                        <path d="M19 13v-2h-2v2h-2v2h2v2h2v-2h2v-2h-2z"/>
                    </svg>
                </div>
                <!-- Assign New Editor -->
                <div class="card-title" id="admin-portal-assign-title"></div>
                <!-- Grant editor access -->
                <div class="card-desc" id="admin-portal-assign-desc"></div>
                <!-- Open → -->
                <div class="card-cta" id="admin-portal-assign-cta"></div>
            </a>
        </div>
    </div>
</div>
