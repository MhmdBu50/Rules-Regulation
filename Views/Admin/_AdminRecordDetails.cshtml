@model dynamic

<div class="admin-record-details">
    <form>
        <div class="row mb-2">
            <!-- left side of the accordion menu inside -->
            <div class="col-lg-6 col-12 mb-3 mb-lg-0">
                <div class="table-responsive">
                    <table class="table table-borderless mb-0">
                        <tr>
                            <td colspan="3">
                                <label class="form-label fw-bold">Regulation/ Manual name</label>
                                <textarea class="form-control" rows="2" readonly>@Model.RegulationName</textarea>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="3">
                                <label class="form-label fw-bold">Brief Description</label>
                                <textarea class="form-control" rows="4" readonly>@(Model.Description ?? "No description available")</textarea>
                            </td>
                        </tr>
                        <tr>
                            <td class="col-12 col-sm-4">
                                <label class="form-label fw-bold">Approving entity</label>
                                <input type="text" class="form-control" readonly value="@Model.ApprovingEntity">
                            </td>
                            <td class="col-12 col-sm-4">
                                <label class="form-label fw-bold">Date of approval</label>
                                <input type="date" class="form-control" readonly value="@Model.ApprovalDate">
                            </td>
                            <td class="col-12 col-sm-4">
                                <label class="form-label fw-bold">Section</label>
                                <input type="text" class="form-control" readonly value="@Model.Sections">
                            </td>
                        </tr>
                        <tr>
                            <td class="col-12 col-sm-6">
                                <label class="form-label fw-bold">Version</label>
                                <input type="text" class="form-control" readonly value="@Model.Version">
                            </td>
                            <td class="col-12 col-sm-6">
                                <label class="form-label fw-bold">User ID</label>
                                <input type="text" class="form-control" readonly value="@Model.UserId">
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <!-- right side of the accordion menu inside -->
            <div class="col-lg-6 col-12">
                <div class="table-responsive">
                    <table class="table table-borderless mb-0">
                        <tr>
                            <td class="col-6">
                                <label class="form-label fw-bold">Delete this document</label>
                                <p class="small text-muted mb-2">Permanently remove the document from the system. This action cannot be undone.</p>
                                <button type="button" class="btn btn-outline-danger btn-sm w-100" onclick="deleteRecord(@Model.Id)">
                                    <i class="fas fa-trash me-2"></i>Delete Document
                                </button>
                            </td>
                            <td class="col-6">
                                <label class="form-label fw-bold">Edit document</label>
                                <p class="small text-muted mb-2">Modify document details, content, or metadata. Changes will be tracked.</p>
                                <button type="button" class="btn btn-primary btn-sm w-100" onclick="editRecord(@Model.Id)">
                                    <i class="fas fa-edit me-2"></i>Edit Document
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td class="col-6">
                                <label class="form-label fw-bold">Download documents</label>
                                <p class="small text-muted mb-2">Save copies of all attachments to your device for offline access.</p>
                                <button type="button" class="btn btn-outline-success btn-sm w-100" onclick="downloadAllAttachments(@Model.Id)">
                                    <i class="fas fa-download me-2"></i>Download All
                                </button>
                            </td>
                            <td class="col-6">
                                <label class="form-label fw-bold">Replace documents</label>
                                <p class="small text-muted mb-2">Upload new files to replace existing attachments while preserving metadata.</p>
                                <button type="button" class="btn btn-outline-warning btn-sm w-100" onclick="replaceAttachments(@Model.Id)">
                                    <i class="fas fa-upload me-2"></i>Replace Files
                                </button>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </form>
    
    @if (Model.Attachments != null && ((IEnumerable<dynamic>)Model.Attachments).Any())
    {
        <div class="mt-4">
            <h6><strong>Attachments:</strong></h6>
            <div class="table-responsive">
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>File Name</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var attachment in Model.Attachments)
                        {
                            <tr>
                                <td>
                                    <i class="fas fa-file-@(attachment.FileType == "pdf" ? "pdf text-danger" : "word text-primary") me-2"></i>
                                    @attachment.OriginalFileName
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@attachment.FileType.ToUpper()</span>
                                </td>
                                <td>
                                    <a href="@Url.Content("~/uploads/" + attachment.FileName)" 
                                       class="btn btn-sm btn-outline-primary me-1" 
                                       target="_blank" 
                                       title="View">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Content("~/uploads/" + attachment.FileName)" 
                                       class="btn btn-sm btn-outline-success" 
                                       download="@attachment.OriginalFileName" 
                                       title="Download">
                                        <i class="fas fa-download"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="mt-3">
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                No attachments are currently associated with this record.
            </div>
        </div>
    }
</div>

<script>
    function deleteRecord(recordId) {
        if (confirm('Are you sure you want to delete this record? This action cannot be undone.')) {
            // Implement delete functionality
            fetch('/Admin/DeleteRecord?id=' + recordId, { method: 'DELETE' })
                .then(response => {
                    if (response.ok) {
                        alert('Record deleted successfully');
                        location.reload();
                    } else {
                        alert('Failed to delete record');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while deleting the record');
                });
        }
    }
    
    function editRecord(recordId) {
        // Redirect to edit page
        window.location.href = '/Admin/EditRecord?id=' + recordId;
    }
    
    function downloadAllAttachments(recordId) {
        // Record the download action in history
        recordDownloadAction(recordId)
            .then(() => {
                // Open download after history is recorded
                window.open('/Admin/DownloadAllAttachments?id=' + recordId, '_blank');
            })
            .catch(error => {
                console.error('Failed to record download history, but continuing with download:', error);
                // Even if history fails, still allow download
                window.open('/Admin/DownloadAllAttachments?id=' + recordId, '_blank');
            });
    }
    
    // Helper function to record download action
    function recordDownloadAction(recordId) {
        return fetch('/History/RecordAction', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                recordId: recordId,
                action: 'download'
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                console.log(`Download action recorded for record ${recordId}`);
                return data;
            } else {
                console.error('Failed to record download action');
                throw new Error('Failed to record download action');
            }
        });
    }
    
    function replaceAttachments(recordId) {
        // Redirect to file replacement page
        window.location.href = '/Admin/ReplaceAttachments?id=' + recordId;
    }
</script>