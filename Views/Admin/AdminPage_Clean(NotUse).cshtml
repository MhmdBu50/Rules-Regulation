                        <!-- Contact Info Button -->
                        <button class="btn-custom btn-dark-custom"
                            onclick="location.href='@Url.Action("AddNewContactInfo", "Admin")'">
                            Add New Contact Info
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


