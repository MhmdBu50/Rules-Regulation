        var queryString = string.Join("&", 
            queryParams.Where(kvp => !string.IsNullOrEmpty(kvp.Value))
                       .Select(kvp => $"{kvp.Key}={Uri.EscapeDataString(kvp.Value!)}"));

        return $"?{queryString}";
    }
