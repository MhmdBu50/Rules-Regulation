                                <input class="form-check-input table-checkbox" type="checkbox" id="historyTable"
                                    name="tables" value="history" checked>
                                <label class="form-check-label" for="historyTable">
                                    <!-- User History -->
                                    <i class="fas fa-history me-2 text-primary"></i><strong id="export-option-history"></strong>
                                </label>
                                <!-- User activity and action logs -->
                                <small class="d-block text-muted mt-1" id="export-option-history-desc"></small>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer bg-light" style="border-radius: 0 0 15px 15px;">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <!-- Cancel -->
                    <i class="fas fa-times me-2"></i><span id="export-button-cancel"></span>
                </button>
                <button type="button" class="btn btn-primary" onclick="confirmExport()" id="confirmExportBtn">
                    <!-- export Selected Tables -->
                    <i class="fas fa-download me-2"></i><span id="export-button-confirm"></span>
