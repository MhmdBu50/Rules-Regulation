                                        <table class=" w-100">
                                            <thead class="text-center">
                                                <tr>
                                                    <th class="custom-col field-padding">
                                                        <!-- Space -->
                                                    </th>
                                                    <th class="custom-col field-padding">
                                                        @record.Id
                                                    </th>
