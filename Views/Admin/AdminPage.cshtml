                                <input class="form-check-input table-checkbox" type="checkbox" id="attachmentsTable"
                                    name="tables" value="attachments" checked>
                                <label class="form-check-label" for="attachmentsTable">
                                    <!-- Attachments -->
                                    <i class="fas fa-paperclip me-2 text-danger"></i><strong id="export-option-attachments"></strong>
                                </label>
                                <!-- File attachments and documents -->
                                <small class="d-block text-muted mt-1" id="export-option-attachments-desc"></small>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-check p-3"
