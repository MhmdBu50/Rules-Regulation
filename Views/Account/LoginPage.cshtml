@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- This file contains the login page for the Rules and Regulations System
It allows users to enter their username and password to access the system
only users from the university are able to enter -->
@section Styles {
    <link rel="stylesheet" href="~/css/LoginPage.css" />
}

@section Scripts {
    <script src="~/js/loginLanguageToggle.js"></script>
    <script src="~/js/languageSwitcher.js"></script>
}

<div class="login-main-content">
    <div class="container body d-flex align-items-center justify-content-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-10 col-md-8 col-lg-5">
                    <div class="card-container-wrapper">
                        <!-- Language Toggle Button -->
                        <button id="language-toggle" class="language-toggle-btn">
                            <span>üåê</span>
                            <!-- ÿßŸÑÿπÿ±ÿ®Ÿäÿ© -->
                            <span id="language-text"></span>
                        </button>
                        
                        <div class="card shadow-lg p-4">
                        <div class="text-center mb-4">
                            <img src="~/imgs/iaulogoname.png" alt="IAU Logo" class="img-fluid" style="max-height: 120px;">
                            <!-- Sign in to Rules And Regulations System -->
                            <h4 class="mt-3 text-dark" id="login-title"></h4>
                        </div>
                        <form asp-controller="Account" asp-action="LoginPage" method="post">
                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                <!-- Username -->
                                <label for="username" class="form-label" id="username-label"></label>
                                <input type="text" class="form-control" id="name" name="name" >
                            </div>
                            <div class="mb-3">
                                <!-- Password -->
                                <label for="password" class="form-label" id="password-label"></label>
                                <input type="password" class="form-control" id="password" name="password" >
                            </div>
                            <div class="d-grid">
                                <!-- login-button -->
                                <button type="submit" id= "login-button">
                                </button>
                            </div>
                        </form>
                        <!-- Need help logging in? -->
                        <div class="text-center mt-3 help-link">
                            <a href="https://www.iau.edu.sa/ar/contact" id="login-help"></a>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


