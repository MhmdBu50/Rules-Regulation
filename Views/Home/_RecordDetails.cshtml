@model dynamic

<div class="record-full-details">
    <h5 class="fw-bold text-primary">@Model.RegulationName</h5>
    
    <div class="row mt-3">
        <div class="col-md-6">
            <p><strong>Regulation ID:</strong> @Model.Id</p>
            <p><strong>Sections:</strong> @Model.Sections</p>
            <p><strong>Version:</strong> @Model.Version</p>
        </div>
        <div class="col-md-6">
            <p><strong>Approval Date:</strong> @Model.ApprovalDate</p>
            <p><strong>Approving Entity:</strong> @Model.ApprovingEntity</p>
            <p><strong>User ID:</strong> @Model.UserId</p>
        </div>
    </div>
    
    @if (Model.Description != null && !string.IsNullOrWhiteSpace(Model.Description.ToString()))
    {
        <div class="mt-3">
            <p><strong>Description:</strong></p>
            <p class="text-muted">@Model.Description</p>
        </div>
    }
    
    @if (Model.Attachments != null && ((IEnumerable<dynamic>)Model.Attachments).Any())
    {
        <div class="mt-3">
            <h6><strong>Attachments:</strong></h6>
            <div class="list-group">
                @foreach (var attachment in Model.Attachments)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <i class="fas fa-file-@(attachment.FileType == "pdf" ? "pdf text-danger" : "word text-primary") me-2"></i>
                            <span>@attachment.OriginalFileName</span>
                            <small class="text-muted ms-2">(@attachment.FileType.ToUpper())</small>
                        </div>
                        <div>
                            <a href="@Url.Content("~/uploads/" + attachment.FileName)" 
                               class="btn btn-sm btn-outline-primary me-1" 
                               target="_blank" 
                               title="View">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="@Url.Content("~/uploads/" + attachment.FileName)" 
                               class="btn btn-sm btn-outline-success" 
                               download="@attachment.OriginalFileName" 
                               title="Download">
                                <i class="fas fa-download"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="mt-3">
            <p class="text-muted"><em>No attachments available for this record.</em></p>
        </div>
    }
</div>
