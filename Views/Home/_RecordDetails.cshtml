@model dynamic

<div class="record-full-details">
    <!-- Row 1: Regulation Name + Department -->
    <div class="row mb-3">
        <div class="col-md-6">
            <p><strong>Regulation Name:</strong></p>
            <p>@Model.RegulationName</p>
        </div>
        <div class="col-md-6">
            <p><strong>Department:</strong></p>
            <p>@Model.Department</p>
        </div>
    </div>
    
    <!-- Row 2: Version Number + Version Date -->
    <div class="row mb-3">
        <div class="col-md-6">
            <p><strong>Version Number:</strong></p>
            <p>@Model.Version</p>
        </div>
        <div class="col-md-6">
            <p><strong>Version Date:</strong></p>
            <p>@Model.VersionDate</p>
        </div>
    </div>
    
    <!-- Row 3: Approving Entity + Approving Date -->
    <div class="row mb-3">
        <div class="col-md-6">
            <p><strong>Approving Entity:</strong></p>
            <p>@Model.ApprovingEntity</p>
        </div>
        <div class="col-md-6">
            <p><strong>Approval Date:</strong></p>
            <p>@Model.ApprovalDate</p>
        </div>
    </div>
    
    <!-- Row 4: Document Type + Sections -->
    <div class="row mb-3">
        <div class="col-md-6">
            <p><strong>Document Type:</strong></p>
            <p>@Model.DocumentType</p>
        </div>
        <div class="col-md-6">
            <p><strong>Sections:</strong></p>
            <p>@Model.Sections</p>
        </div>
    </div>
    
    <!-- Row 5: Description -->
    <div class="row mb-3">
        <div class="col-12">
            <p><strong>Description:</strong></p>
            @if (Model.Description != null && !string.IsNullOrWhiteSpace(Model.Description.ToString()))
            {
                <p class="text-muted">@Model.Description</p>
            }
            else
            {
                <p class="text-muted"><em>No description available.</em></p>
            }
        </div>
    </div>
    
    @if (Model.Attachments != null && ((IEnumerable<dynamic>)Model.Attachments).Any())
    {
        <div class="mt-3">
            <h6><strong>Attachments:</strong></h6>
            <div class="list-group">
                @foreach (var attachment in Model.Attachments)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <i class="fas fa-file-@(attachment.FileType == "pdf" ? "pdf text-danger" : "word text-primary") me-2"></i>
                            <span>@attachment.OriginalFileName</span>
                            <small class="text-muted ms-2">(@attachment.FileType.ToUpper())</small>
                        </div>
                        <div>
                            <a href="@Url.Content("~/uploads/" + attachment.FileName)" 
                               class="btn btn-sm btn-outline-primary me-1" 
                               target="_blank" 
                               title="View">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="@Url.Content("~/uploads/" + attachment.FileName)" 
                               class="btn btn-sm btn-outline-success" 
                               download="@attachment.OriginalFileName" 
                               title="Download">
                                <i class="fas fa-download"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>
