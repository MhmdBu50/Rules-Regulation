@{
    ViewData["Title"] = "Access Forbidden";
    Layout = "_Layout";
}

<div class="container-fluid d-flex justify-content-center align-items-center min-vh-100">
    <div class="text-center">
        <div class="error-content">
            <div class="error-number mb-4">
                <h1 class="display-1 text-danger">403</h1>
            </div>
            <div class="error-text">
                <h2 class="mb-3">Access Forbidden</h2>
                <p class="lead mb-4">
                    You don't have permission to access this resource.
                </p>
                <div class="error-details mb-4">
                    <div class="alert alert-danger">
                        <i class="fas fa-lock me-2"></i>
                        This could be because:
                        <ul class="mt-2 mb-0 text-start">
                            <li>You need to log in to access this page</li>
                            <li>Your account doesn't have the required permissions</li>
                            <li>The resource is restricted to administrators only</li>
                        </ul>
                    </div>
                </div>
                <div class="error-actions">
                    <a href="@Url.Action("LoginPage", "Home")" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-sign-in-alt me-2"></i>Login
                    </a>
                    <a href="@Url.Action("homePage", "Home")" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-home me-2"></i>Go to Homepage
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.error-content {
    max-width: 700px;
    margin: 0 auto;
}

.error-number h1 {
    font-size: 8rem;
    font-weight: bold;
    color: #dc3545;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
}

.error-text h2 {
    color: #333;
    font-weight: 600;
}

.error-text p {
    color: #666;
    font-size: 1.1rem;
}

.error-details ul {
    list-style-type: none;
    padding-left: 0;
}

.error-details li {
    padding: 5px 0;
}

.error-details li:before {
    content: "â€¢ ";
    color: #dc3545;
    font-weight: bold;
}

.error-actions .btn {
    min-width: 150px;
}
</style>

<script>
// Mobile responsive adjustments
if (window.innerWidth <= 768) {
    document.addEventListener('DOMContentLoaded', function() {
        const errorNumber = document.querySelector('.error-number h1');
        if (errorNumber) {
            errorNumber.style.fontSize = '5rem';
        }
        
        const buttons = document.querySelectorAll('.error-actions .btn');
        buttons.forEach(btn => {
            btn.style.display = 'block';
            btn.style.width = '100%';
            btn.style.marginBottom = '10px';
            btn.classList.remove('me-3');
        });
    });
}
</script>
