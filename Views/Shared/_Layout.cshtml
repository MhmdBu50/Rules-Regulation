<!DOCTYPE html>
@using Microsoft.AspNetCore.Localization
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture.Culture.Name ?? "en-US";
    var isArabic = currentCulture == "ar-SA";
    var htmlLang = isArabic ? "ar" : "en";
    var htmlDir = isArabic ? "rtl" : "ltr";
}
<html lang="@htmlLang">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RulesRegulation</title>
    
    <!-- Security and cache control meta tags - with better navigation -->
    <meta http-equiv="Cache-Control" content="no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RulesRegulation.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<script src="~lib/bootstrap/dist/js/bootstrap.js"></script>
<body lang="@htmlLang" dir="@htmlDir" class="@(isArabic ? "rtl" : "ltr")">
            @RenderBody()
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/languageSwitcher.js"></script>
    <script src="~/js/logout.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
